<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    tools:context="edu.example.dmitry.videoeditor.fragments.ImageFragment">

    <!-- TODO: Update blank fragment layout -->


    <FrameLayout
        android:id="@+id/imageFrameRootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">
        <LinearLayout
            android:id="@+id/editorLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/image_header_pos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
            <FrameLayout
                android:id="@+id/surface_view_pos"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/stickersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/image_footer_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>
        <FrameLayout
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right|bottom"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageButton

                android:id="@+id/fragment_image_send_button"
                android:background="@drawable/round_24dp"
                android:paddingLeft="3dp"
                android:src="@drawable/ic_send_white_24dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left|bottom"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageButton
                android:id="@+id/fragment_image_ok_button"
                android:background="@drawable/round_24dp"
                android:paddingLeft="3dp"
                android:src="@drawable/ic_check_white_24dp"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </FrameLayout>
    </FrameLayout>


</FrameLayout>



