<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dmitry.videoeditor.Views.ImageFragment">

    <!-- TODO: Update blank fragment layout -->


    <FrameLayout
        android:id="@+id/imageFrameRootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">
        <LinearLayout
            android:id="@+id/editorLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/image_header_pos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
            <FrameLayout
                android:id="@+id/surface_view_pos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/stickersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/image_footer_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>
    </FrameLayout>

</FrameLayout>



