<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dmitry.videoeditor.Views.ElementRedactorFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">
    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical">
        <ImageButton
            android:background="@drawable/ic_format_bold_white_24dp"
            android:id="@+id/fragment_element_redactor_bold_button"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Жирный"/>
        </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/fragment_element_redactor_italic_button"
            android:background="@drawable/ic_format_italic_white_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Наклон"/>
        </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/fragment_element_redactor_color_button"
            android:background="@drawable/ic_format_color_text_white_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цвет"/>

        </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/fragment_element_redactor_font_button"
            android:background="@drawable/ic_title_white_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Шрифт"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical">
            <ImageButton
                android:background="@drawable/ic_check_white_24dp"
                android:id="@+id/fragment_element_redactor_ok_button"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Готово"/>

        </LinearLayout>

    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical">
    <ImageButton
        android:background="@drawable/ic_delete_white_24dp"
        android:id="@+id/fragment_element_redactor_cancel_button"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
