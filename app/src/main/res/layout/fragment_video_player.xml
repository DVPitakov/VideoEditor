<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.example.dmitry.videoeditor.Views.VideoPlayerFragment">

    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:id="@+id/fragment_video_player_main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/test_pos"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FF10A0FF">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <ImageButton
                            android:layout_margin="10dp"
                            android:id="@+id/show_convert_menu"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_settings_black_24dp"
                            android:scaleType="fitXY"
                            android:background="#00000000"/>

                    <ImageButton
                        android:layout_margin="10dp"
                        android:id="@+id/crosButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cancel_black_24dp"
                        android:scaleType="fitXY"
                        android:background="#00000000"/>
                </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_margin="10dp"
                        android:id="@+id/playButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_play_circle_outline_black_24dp"
                        android:scaleType="fitXY"
                        android:background="#00000000"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end">
                    <ImageButton
                        android:layout_margin="10dp"
                        android:id="@+id/send_button"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_send_white_24dp"
                        android:scaleType="fitXY"
                        android:background="#00000000"/>
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_video_player_buttons"
            android:visibility="gone"
            android:background="#A0000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/fragment_video_player_assert_button"
                android:layout_margin="2dp"
                android:background="#20000000"
                android:textColor="@android:color/white"
                android:text="Применить"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/fragment_video_player_cancel_button"
                android:layout_margin="2dp"
                android:background="#20000000"
                android:textColor="@android:color/white"
                android:text="Отмена"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
</LinearLayout>
