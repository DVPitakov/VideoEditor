<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dmitry.videoeditor.Views.VideoPlayerFragment">

    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/videoProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A0000000"
                android:layout_gravity="center"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#A0000000"
                android:paddingBottom="8dp">
                <ImageButton
                    android:layout_margin="10dp"
                    android:id="@+id/show_convert_menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/menu2"
                    android:scaleType="fitXY"
                    android:background="#00000000"/>
                <ImageButton
                    android:layout_margin="10dp"
                    android:id="@+id/show_kroper"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_content_cut_black_24dp"
                    android:scaleType="fitXY"
                    android:background="#00000000"/>
                <ImageButton
                    android:layout_margin="10dp"
                    android:id="@+id/playButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_circle_outline_black_24dp"
                    android:scaleType="fitXY"
                    android:background="#00000000"/>
                <ImageButton
                    android:layout_margin="10dp"
                    android:id="@+id/crosButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/close"
                    android:scaleType="fitXY"
                    android:background="#00000000"/>
            </LinearLayout>
        </LinearLayout>
    <com.edmodo.rangebar.RangeBar
        android:visibility="gone"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rangebar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        custom:tickCount="1000" />
</LinearLayout>
